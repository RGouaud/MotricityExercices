<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="22dp"
                />
            <gradient
                android:angle="360"
                android:startColor="#FAD552"
                android:endColor="#FDA085"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle" >
            <corners
                android:radius="22dp"
                />
            <solid android:color="#1C1C1C" />
        </shape>
    </item>
</layer-list>